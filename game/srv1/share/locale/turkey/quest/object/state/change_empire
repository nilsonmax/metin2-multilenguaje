local a = select ( "Evet" , "Hayýr" ) 
if 2 == a then 
return false 
end 
local ret = pc . change_empire ( s ) 
local oldempire = pc . get_empire ( ) 
if ret == 999 then 
say_title ( "Krallýklarýn Ýzi " ) 
say ( "Baþarýyla imparatorluk deðiþti." ) 
say ( "Oyundan çýk ve tekrar gir." ) 
